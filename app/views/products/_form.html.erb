<%= form_with(model: [category, product]) do |f| %>
  <div class="form-control">

  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
      
      <div>
        <%= f.hidden_field :category_id, value: product.category.id %>
        <%= f.label :model, style: "display: block" %>
        <%= f.text_field :model %>
      </div>
      <div>
        <%= f.label :name, style: "display: block" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :manufacturer, style: "display: block" %>
        <%= f.text_field :manufacturer %>
      </div>

      <div>
        <%= f.label :description, style: "display: block" %>
        <%= f.text_area :description %>
      </div>

      <div>
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div>
        <%= f.label :price %>
        <%= f.number_field :price, min: 0.01, step: 0.01 %>
      </div>

      <div>
        <%= f.fields_for :stock_item do |sf| %>
          <%= sf.label :quantity_available %>
          <%= sf.number_field :quantity_available, min: 1 %>
        <% end %>
      </div>

      <div>
        <%= f.submit class: "btn btn-dark" %>
      </div>

  </div>
<% end %>