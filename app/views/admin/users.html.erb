<div class = "container">
  <h1 class="text-center"> Administrator </h1>
  <%= render 'admin/admin_nav'%>
</div>
<table class="table table dark table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">User name</th>
      <th scope="col">E-mail</th>
      <th scope="col">Posts</th>
      <th scope="col">Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= link_to user.full_name, user_path(user), class: "link-dark" %></td>
        <td><%= user.email %></td>
        <td><%= pluralize(user.posts.size, "Posts") %></td>
        <td><%= pluralize(user.comments.size, "Comment") %></td>
      </tr>
    <% end %>
  </tbody>
</table>