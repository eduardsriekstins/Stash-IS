<div class="container">
  <div class="container card mt-5 mb-5">
    <h2 class="card-title d-flex justify-content-between mt-3 mb-3"><span>Updates</span>
      <%= link_to "New post", new_post_path, class: "btn btn-dark", style: "top: 50%"%>
    <h2>
    <div id="posts">
      <% @posts.each do |post| %>
        <div style="border: 0.1px solid grey; padding: 1em; margin: 1em; border-radius: 15px;">
          <%= render post %>
        <p>
          <%= link_to "Show this post", post, class: "btn btn-dark" %>
        </p>
        </div>
        <% end %>
    </div>
  </div>
</div>