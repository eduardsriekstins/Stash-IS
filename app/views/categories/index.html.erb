<div class="container">
  <br>
  <h2 class="card-title d-flex justify-content-between mt-3 mb-3"><span>Categories</span>
    <%= link_to "New category", new_category_path, class: "btn btn-dark" %>
  </h2>
  <br>
  <div id="categories">
    <% @categories.each do |category| %>
      <%= render category %>
      <p>
        <%= link_to "Show this category", category %>
      </p>
    <% end %>
  </div>
</div>