<div class="container">
  <br>
  <h2 class="card-title d-flex justify-content-between mt-3 mb-3"><span>Categories</span>
    <%= link_to "New category", new_category_path, class: "btn btn-dark" %>
  </h2>
  <br>
  <% @categories.in_groups_of(4, false).each do |group| %>
  <div class="row">
    <% group.each do |category| %>
      <div class="col-md-3 card d-flex justify-content-center ms-2">
          <%= render "category_index", category: category %>
      </div>
    <% end %>
  </div>
<% end %>

