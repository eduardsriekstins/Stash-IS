
<%= render @category %>

<div>
  <%= link_to "Edit this category", edit_category_path(@category), class:"btn btn-light btn btn-outline-dark" %>
  <%= link_to "Back to categories", categories_path, class:"btn btn-light btn btn-outline-dark" %>

  <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-dark" %>
</div>

<div class="row">
  <div class="col">
    <%= link_to "Create a new product", new_category_product_path(@category), class: "btn btn-dark" %>
  </div>
</div>

<div>
  <% @products.each do |product| %>
    <%#byebug %>
    <%= render 'products/product_index', locals: { category: @category, product: product } %>
  <% end %>
</div>