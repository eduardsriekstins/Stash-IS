<div class="container">
  <div class="container card mt-5 mb-5">
    <br />
    <h2 class="card-title d-flex justify-content-between mt-3 mb-3"><span>Projects</span>
    <%= link_to "New project", new_project_path, class: "btn btn-dark" if current_user.admin? %>
    </h2>
    <br />

    <div id="projects" class="container mb-5">
      <% @projects.each do |project| %>
        <div class="card mb-3">
          <%= render project %>
            <div class="btn btn-group">
            <p>
              <%= link_to "Show this project", project, class: "btn btn-dark ms-3" %>
            </p>
            <p>
              <%= link_to "Edit this project", edit_project_path(project), class: "btn btn-dark ms-3" if current_user.admin? %>
            </p>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>