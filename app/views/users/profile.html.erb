<div class="container mt-5">
  <div class="row">
    <div class="col-4">
      <%= image_tag(@user.avatar, style: "width: 150px; height: 150px; border-radius: 100%") if @user.avatar.attached? %>
    </div>
    <div class="col-8">
      <h1><%= @user.full_name%></h1>
    </div>
  </div>
  <br />
  <div class="col-10">
    <h4> Projects: </h4>
    <% @projects.each do |project| %>
      <div class="card mt-3">
        <h5 class="card-title"> <%= link_to project.name, project, class: "link link-dark" %> </h5>
        <p class="card-text"> <%= "#{time_ago_in_words(project.created_at)} ago." %> </p>
        <p class="card-text"> <%= project.description %> </p>
      </div>
    <% end %>
  </div>
</div>